<div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-3 mb-3">Lista Pizze</h1>
        <div>
            <input type="text" id="search" class="form-control" placeholder="Cerca per titolo" onkeyup="loadPizze(this.value)" />
        </div>
    </div>

    <div id="pizze-table">
        <table class="table pizze-list-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Immagine</th>
                    <th>Nome</th>
                    <th>Descrizione</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="pizze">
                <!-- qui ci andranno i <tr> contenenti i post -->

            </tbody>
        </table>
    </div>
    <div id="no-pizze" class="d-none">
        <h2>Non ci sono post da mostrare</h2>
    </div>
    <a class="btn btn-primary" href="/Client/Create">Nuovo post</a>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Api/index.js"></script>
    }
